<%= form_with(model: @word, local: true) do |f| %>

  <% if message.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% message.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :content, '単語' %>
  <%= f.text_field :content %>
  
  <%= f.label :description, '説明' %>
  <%= f.text_field :description %>

  <%= f.submit '投稿' %>
<% end %>
